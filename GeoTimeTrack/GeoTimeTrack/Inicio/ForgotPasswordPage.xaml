<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GeoTimeTrack.ForgotPasswordPage"
             BackgroundColor="White">

    <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Spacing="20" Padding="20">

        <Frame CornerRadius="100" BorderColor="#1c2757" BackgroundColor="Transparent" HeightRequest="100" WidthRequest="100" HorizontalOptions="Center">
            <Image Source="GeoTime.jpeg" VerticalOptions="CenterAndExpand" HeightRequest="100" Aspect="AspectFit"/>
        </Frame>

        <Label Text="¿Olvidaste tu contraseña?" TextColor="#1c2757" FontSize="24" FontAttributes="Bold" HorizontalTextAlignment="Center" Padding="0,30,0,0"/>

        <Label Text="Correo electrónico" TextColor="#1c2757" FontSize="16"/>

        <Entry Placeholder="Ingrese su correo electrónico" PlaceholderColor="#46474A" FontSize="16" BackgroundColor="#F4F4F4" TextColor="#1c2757"/>

        <Button x:Name="SendcodeEntry" Text="Enviar Código" TextTransform="None" BackgroundColor="#173477" TextColor="White" FontSize="Large" CornerRadius="20" HeightRequest="50" Clicked="OnSendCodeButtonClicked" />

    </StackLayout>

</ContentPage>