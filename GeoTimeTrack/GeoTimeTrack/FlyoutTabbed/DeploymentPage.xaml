<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="GeoTimeTrack.FlyoutTabbed.DeploymentPage"
            xmlns:pages="clr-namespace:GeoTimeTrack.FlyoutTabbed"
            Title="Flyout">
    
  <FlyoutPage.Flyout>
    <!-- Definición del menú lateral -->
    <pages:DeploymentPageFlyout x:Name="FlyoutPage" />
  </FlyoutPage.Flyout>
  
  <FlyoutPage.Detail>
    <NavigationPage>
      <x:Arguments>
        <!-- Detalle de la página principal -->
        <pages:DeploymentPageDetail />
      </x:Arguments>
    </NavigationPage>
  </FlyoutPage.Detail>

</FlyoutPage>