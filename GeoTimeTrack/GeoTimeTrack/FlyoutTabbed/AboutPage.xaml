<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GeoTimeTrack.FlyoutTabbed.AboutPage"
             BackgroundColor="White"
             Title="About" 
             IconImageSource="About_icon.png">

    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" Padding="20">
            <Image Source="GeoTimeTrack_Transparent.png" HeightRequest="150" Aspect="AspectFit" HorizontalOptions="Center" Margin="0,0,0,30"/>

            <Label Text="GeoTimeTrack" FontSize="28" TextColor="#1c2757" FontAttributes="Bold" HorizontalTextAlignment="Center" Margin="0,0,0,10"/>

            <Label Text="Version: 1.0" FontSize="18" TextColor="#1c2757" HorizontalTextAlignment="Center" Margin="0,0,0,5"/>

            <Label Text="Copyright © 2023 Reyes Inc." FontSize="18" TextColor="#1c2757" HorizontalTextAlignment="Center" Margin="0,0,0,0"/>
        </StackLayout>
    </ContentPage.Content>

</ContentPage>